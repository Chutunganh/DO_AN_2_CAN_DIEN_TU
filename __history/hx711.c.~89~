#include <16F877A.h>
#fuses XT, NOWDT, NOPROTECT, NOBROWNOUT, NOLVP, NOPUT, NOWRT, NODEBUG, NOCPD
#use delay(clock = 4000000)    // 4 MHz

#define DT1     PIN_C0
#define SCK     PIN_C1
#define RESET_BTN PIN_A0
#define ONOFF_BTN  PIN_A1
#define LCD_POWER  PIN_A2

// I2C cho LCD
#use i2c(master, sda=PIN_C4, scl=PIN_C3, stream=I2C_LCD, fast=100000)
#include "I2C_LCD.c"   // thu vi?n I2C b?n dã cung c?p

float SCALE = 36000;
int1 system_on = TRUE;

// -------- HX711 d?c 24-bit ----------
unsigned int32 readCount(void) {
   unsigned int32 data = 0;
   unsigned int8 j;
   output_bit(DT1, 1);
   output_bit(SCK, 0);
   while (input(DT1));        // ch? DRDY
   for (j = 0; j < 24; j++) {
      output_bit(SCK, 1);
      data = data << 1;
      output_bit(SCK, 0);
      if (input(DT1)) data++;
   }
   output_bit(SCK, 1);
   data = data ^ 0x800000;    // chuy?n mã
   output_bit(SCK, 0);
   return data;
}

int32 readAverage(void) {
   unsigned int32 sum = 0;
   int k;
   for (k = 0; k < 10; k++) {
      sum += readCount();
      delay_ms(10);
   }
   return sum / 10;
}
// -------------------------------------

void main() {
   setup_adc_ports(NO_ANALOGS);
   setup_adc(ADC_OFF);
   set_tris_a(0x03);   // RA0, RA1 input; RA2 output (LCD_POWER)

   // B?t ngu?n LCD module I2C (n?u b?n dùng chân di?u khi?n ngu?n)
   output_high(LCD_POWER);
   delay_ms(200);

   // Kh?i t?o LCD I2C: d?a ch? 0x4E (tuong ?ng 0x27 << 1).
   // N?u module c?a b?n là 0x3F thì dùng 0x7E.
   LCD_Begin(0x4E);
   delay_ms(100);
   LCD_Goto(3,1); printf(LCD_Out, "Loading");
   delay_ms(5);
   LCD_Goto(3,1); printf(LCD_Out, "Loading.");
   delay_ms(5);
   LCD_Goto(3,1); printf(LCD_Out, "Loading..");
   delay_ms(5);
   LCD_Goto(3,1); printf(LCD_Out, "Loading...");
   delay_ms(5);

   {
      char name1[] = "Chu Tung Anh";
      int8 i;
      LCD_Goto(3,1);
      for (i = 0; name1[i] != '\0'; i++) {
         LCD_Out(name1[i]);
         delay_ms(10);
      }
      delay_ms(10);

      char name2[] = "Can dien tu";
      LCD_Goto(3,2);
      for (i = 0; name2[i] != '\0'; i++) {
         LCD_Out(name2[i]);
         delay_ms(10);
      }
      delay_ms(20);
   }

   // d?c offset ban d?u
   unsigned int32 offset = readAverage();

   LCD_Cmd(LCD_CLEAR);
   LCD_Goto(2,1); printf(LCD_Out, "San sang!");
   delay_ms(20);
float last_grams = -1000;
   while(TRUE) {
      // Nút ON/OFF
      if (input(ONOFF_BTN) == 0) {
         delay_ms(5);
         if (input(ONOFF_BTN) == 0) {
            system_on = !system_on;
            if (system_on) {
               output_high(LCD_POWER);
               delay_ms(50);
               LCD_Begin(0x4E);
               offset = readAverage();
               delay_ms(100);
            } else {
               delay_ms(5);
               output_low(LCD_POWER);
            }
            while (input(ONOFF_BTN) == 0); // d?i th? nút
            delay_ms(50);
         }
      }

      if (!system_on) {
         continue;
      }

      // Nút RESET: c?p nh?t offset
      if (input(RESET_BTN) == 0) {
         delay_ms(10);
         if (input(RESET_BTN) == 0) {
            offset = readAverage();
            while (input(RESET_BTN) == 0);
            delay_ms(50);
         }
      }

      unsigned int32 raw = readAverage();
      signed int32 delta = (signed int32)raw - (signed int32)offset;
      if (delta < 0) delta = 0;
      float grams = (float)delta / SCALE;

    if(abs(grams - last_grams) >= 1) {
      LCD_Goto(1,1);
      printf(LCD_Out,"%6.0f g", grams);
      last_grams = grams;
   }

      delay_ms(150);
   }
}

