#include <16F877A.h>
#fuses XT, NOWDT, NOPROTECT, NOBROWNOUT, NOLVP, NOPUT, NOWRT, NODEBUG, NOCPD
#use delay(clock = 2MHz)

#define DT1 pin_c0
#define SCK pin_c1
#define RESET_BTN PIN_A0
#define ONOFF_BTN PIN_A1
#define LCD_POWER PIN_A2

#use i2c(master, sda=PIN_C4, scl=PIN_C3, stream=I2C_LCD, slow)
#include "I2C.LCD.c"

float SCALE = 36000;
int1 system_on = TRUE;

// ====================== HX711 ===========================
unsigned int32 readCount(void) {
   unsigned int32 data;
   unsigned int8 j;
   output_bit(DT1, 1);
   output_bit(SCK, 0);
   data = 0;
   while (input(DT1));
   for (j = 0; j < 24; j++) {
      output_bit(SCK, 1);
      data = (data << 1);
      output_bit(SCK, 0);
      if (input(DT1)) data++;
   }
   output_bit(SCK, 1);
   data = data ^ 0x800000;
   output_bit(SCK, 0);
   return data;
}

int32 readAverage(void) {
   unsigned int32 sum = 0;
   for (int k = 0; k < 10; k++)
      sum += readCount();
   return sum / 10;
}
// ======================= END HX711 =========================

void main() {

   setup_adc_ports(NO_ANALOGS);
   setup_adc(ADC_OFF);

   set_tris_a(0x03);

   output_high(LCD_POWER);
   delay_ms(100);

   // ==== KH?I T?O LCD I2C ====
   LCD_Begin(0x4E);    // Ð?a ch? PCF8574 (0x27 << 1)
   delay_ms(200);

   // ==== Loading ====
   LCD_Cmd(LCD_CLEAR);
   LCD_Goto(3,1); printf(LCD_Out, "Loading");
   delay_ms(500);
   LCD_Goto(3,1); printf(LCD_Out, "Loading.");
   delay_ms(500);
   LCD_Goto(3,1); printf(LCD_Out, "Loading..");
   delay_ms(500);
   LCD_Goto(3,1); printf(LCD_Out, "Loading...");
   delay_ms(700);

   LCD_Cmd(LCD_CLEAR);
   delay_ms(300);

   // ==== Hi?n th? tên ====
   char name1[] = "Chu Tung Anh";
   LCD_Goto(3,1);
   for(int8 i = 0; name1[i] != '\0'; i++){
      LCD_Out(name1[i]);
      delay_ms(150);
   }

   char name2[] = "Can dien tu";
   LCD_Goto(3,2);
   for(int8 i = 0; name2[i] != '\0'; i++){
      LCD_Out(name2[i]);
      delay_ms(150);
   }
   delay_ms(1500);

   unsigned int32 offset = readAverage();

   LCD_Cmd(LCD_CLEAR);
   LCD_Goto(2,1);
   printf(LCD_Out, "San sang!");
   delay_ms(1000);

   while(TRUE) {

      // ==== Nút ON/OFF ====
      if(input(ONOFF_BTN) == 0) {
         delay_ms(20);
         if(input(ONOFF_BTN) == 0) {

            system_on = !system_on;

            if(system_on) {
               output_high(LCD_POWER);
               delay_ms(100);
               LCD_Begin(0x4E);
               offset = readAverage();
            } else {
               LCD_Cmd(LCD_CLEAR);
               delay_ms(1);
               output_low(LCD_POWER);
            }

            while(input(ONOFF_BTN) == 0);
            delay_ms(50);
         }
      }

      if(!system_on) continue;

      // ==== Nút RESET ====
      if(input(RESET_BTN) == 0) {
         delay_ms(10);
         if(input(RESET_BTN) == 0) {
            offset = readAverage();
            while(input(RESET_BTN) == 0);
            delay_ms(50);
         }
      }

      // ==== Ð?c giá tr? cân ====
      unsigned int32 read1 = readAverage();
      signed int32 delta = (signed int32)read1 - (signed int32)offset;
      if(delta < 0) delta = 0;

      float grams = (float)delta / SCALE;

      LCD_Cmd(LCD_CLEAR);
      LCD_Goto(1,1);
      printf(LCD_Out, "%.0f g", grams);

      delay_ms(100);
   }
}

